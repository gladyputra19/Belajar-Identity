
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table id="table" class="table table-responsive">
    <thead>
        <tr>
            <th>UserId</th>
            <th>RoleId</th>
            <th>Action</th>
        </tr>
    </thead>
</table>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">UserRole Form</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="Id">Id</label>
                    <input type="text" class="form-control" id="UserRoleIdText" placeholder="Id" />
                </div>
                <div class="form-group">
                    <label for="Name">UserId</label>
                    <input type="text" id="UserIdText" class="form-control" placeholder="UserId">
                </div>
                <div class="form-group">
                    <label for="RoleId">RoleId</label>
                    <input type="text" id="RoleNIdText" class="form-control" placeholder="RoleId">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" onclick="Validation();">Submit</button>
                <button type="button" class="btn btn-primary" id="Update" onclick="Validation();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
@section Scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="https://kit.fontawesome.com/2248d5bdb1.js" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $("#table").DataTable({
                "ajax": {
                    "url": "/UserRoles/GetDataUserRoles",
                    "type": "GET",
                    "dataType": "json"
                },
                "columns": [
                    { "data": "UserName" },
                    { "data": "UserRole" },
                    {
                        "render": function (data, type, row) {
                            return "<a class = 'btn btn-warning'><i class = 'fa fa-pencil'></i></a> &nbsp <a class = 'btn btn-danger'><i class='fa fa-trash-alt'></i></a>";
                        }
                    }
                ]
            });
        });
    </script>
}
